<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_bgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/rect_circle"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="标题"
            android:textColor="@color/color_blue"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="15dp">

            <EditText
                android:id="@+id/et_username_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:inputType="text"
                android:nextFocusDown="@+id/btn_modify"
                android:text="ok"
                android:textColor="@color/app_txt_color"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_del_all"
                android:layout_width="@dimen/dimen_40"
                android:layout_height="@dimen/dimen_40"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn_del_text"
                android:nextFocusDown="@+id/btn_modify" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="16dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_hiddle"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="42dp"
                android:background="@color/transparent_base"
                android:text="修改"
                android:textColor="@color/white_base"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_modify"
                android:layout_width="@dimen/dimen_100"
                android:layout_height="42dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_fouces_style"
                android:nextFocusUp="@+id/et_username_edit"
                android:text="修改"
                android:textColor="@color/white_base"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>

