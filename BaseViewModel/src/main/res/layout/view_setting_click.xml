<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_centerInParent="true">

        <Button
            android:id="@+id/btn_click_View"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/btn_chooice_style"
            android:stateListAnimator="@null" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_30"
            android:paddingRight="@dimen/dimen_30">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimen_70"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_image_show"
                    style="@style/termnal_setting_image"
                    android:background="@drawable/time" />

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/app_setting_title"
                    android:text="@string/time_setting" />

                <TextView
                    android:id="@+id/tv_content"
                    style="@style/app_setting_content" />

                <TextView
                    android:id="@+id/tv_setting"
                    style="@style/termnal_setting_button"
                    android:gravity="center"
                    android:text="@string/setting_default" />

            </LinearLayout>

            <View style="@style/setting_current_view_style" />
        </LinearLayout>

    </FrameLayout>


</RelativeLayout>