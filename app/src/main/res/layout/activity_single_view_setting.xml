<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <LinearLayout
        android:id="@+id/lin_exit"
        style="@style/setting_exit_layout">

        <ImageView style="@style/setting_exit_image" />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/setting_exit_txt" />
    </LinearLayout>

    <LinearLayout
        style="@style/setting_fragment_lin"
        android:padding="15dp">

        <TextView
            android:id="@+id/tv_devices_setting"
            style="@style/setting_title_desc"
            android:text="单机属性" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="@dimen/dimen_30"
            android:orientation="vertical">

            <!--视频音量-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="        视频音量"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@mipmap/icon_voice_play" />

                <SeekBar
                    android:id="@+id/seek_video_num"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10" />

                <TextView
                    android:id="@+id/tv_show_num_video"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="3"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

            </LinearLayout>

            <!--图片间隔时间设置-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="图片间隔时间"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="@dimen/dimen_40"
                        android:layout_height="@dimen/dimen_40"
                        android:layout_gravity="center_vertical"
                        android:background="@mipmap/icon_time" />

                    <SeekBar
                        android:id="@+id/seek_pic_distance"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dimen_10" />

                    <TextView
                        android:id="@+id/tv_show_num"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/grey"
                        android:textSize="20sp" />


                </LinearLayout>

            </LinearLayout>

            <!--图片切换动画-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="图片切换动画"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@mipmap/icon_animal" />

                <RelativeLayout
                    android:layout_width="300dp"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10">

                    <Button
                        android:id="@+id/btn_anim_type"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/btn_fouces_style"
                        android:stateListAnimator="@null"
                        android:text="默认"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_18" />

                    <ImageView
                        android:layout_width="@dimen/dimen_20"
                        android:layout_height="@dimen/dimen_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:background="@mipmap/spinner_down" />

                </RelativeLayout>

            </LinearLayout>


            <!--=================布局切换=====================-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimen_30"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="        布局选择"
                    android:textColor="@color/grey"
                    android:textSize="20sp" />

                <ImageView
                    android:layout_width="@dimen/dimen_40"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_30"
                    android:background="@mipmap/icon_animal" />

                <Button
                    android:id="@+id/btn_choice_view"
                    android:layout_width="300dp"
                    android:layout_height="@dimen/dimen_35"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@drawable/btn_fouces_style"
                    android:stateListAnimator="@null"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_18" />

                <RelativeLayout
                    android:layout_width="@dimen/dimen_60"
                    android:layout_height="@dimen/dimen_40"
                    android:layout_marginLeft="@dimen/dimen_10"
                    android:background="@color/black"
                    android:padding="2dp">

                    <ImageView
                        android:id="@+id/iv_show_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>