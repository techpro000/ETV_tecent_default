<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_bgg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_back_bgg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scaleType="fitXY" />

    <AbsoluteLayout
        android:id="@+id/view_abous"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <include
        android:id="@+id/down_syatues"
        layout="@layout/view_float_down" />

    <RelativeLayout
        android:id="@+id/rela_mat_bgg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <com.etv.view.AutoScrollTextView
            android:id="@+id/auto_scrool_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_error_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/red"
        android:padding="@dimen/dimen_10"
        android:textColor="@color/white"
        android:textSize="@dimen/textSize_20"
        android:visibility="gone" />

    <View
        android:id="@+id/view_click_right"
        android:layout_width="@dimen/dimen_200"
        android:layout_height="@dimen/dimen_200"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:visibility="gone" />

</RelativeLayout>