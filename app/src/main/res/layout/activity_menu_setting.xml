<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rela_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_ground">

    <LinearLayout
        android:id="@+id/lin_exit"
        style="@style/setting_exit_layout">

        <ImageView style="@style/setting_exit_image" />

        <TextView
            android:id="@+id/tv_exit"
            style="@style/setting_exit_txt" />
    </LinearLayout>

    <LinearLayout
        style="@style/setting_fragment_lin"
        android:padding="@dimen/dimen_10">

        <TextView
            android:id="@+id/tv_hiddle_title"
            style="@style/setting_title_desc"
            android:text="系统设置" />

        <FrameLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nextFocusLeft="@+id/linear_ethernet" />

    </LinearLayout>
</RelativeLayout>